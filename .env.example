# LinkedIn API Credentials
LINKEDIN_API_KEY=your_linkedin_client_id
LINKEDIN_API_SECRET=your_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token
# Use your actual production URL here (examples below):
# LINKEDIN_REDIRECT_URI=https://linkedin-js-tips.onrender.com/auth/linkedin/callback
# LINKEDIN_REDIRECT_URI=https://linkedin-js-tips.fly.dev/auth/linkedin/callback
# For development:
LINKEDIN_REDIRECT_URI=http://localhost:3000/auth/linkedin/callback
LINKEDIN_PERSON_ID=your_linkedin_person_id

# Application Settings
PORT=3000
POST_INTERVAL=86400000  # 24 hours in milliseconds

# Security
SESSION_SECRET=choose_a_strong_random_secret

# For production, set NODE_ENV to 'production'
NODE_ENV=development